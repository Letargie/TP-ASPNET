@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li><p class="navbar-text">Hello, <a asp-controller="Users" asp-action="Index">@User.Identity.Name</a></p></li>                 	 
        <li><a onclick="document.getElementById('logout_form').submit();" style="cursor: pointer;">Log out</a></li>
    </ul>
    <form asp-controller="Connection" asp-action="Logout" method="post" id="logout_form"></form>
}
else
{
    <ul class="nav navbar-nav navbar-right">   
        <li><a asp-controller="Connection" asp-action="Login">Log in</a></li>
    </ul>
}